<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:Calculateur_wpf.ViewModel" x:Class="Calculateur_wpf.View.MainStats" 
             mc:Ignorable="d" HorizontalAlignment="Left" VerticalAlignment="Top" Height="268">
    <UserControl.DataContext>
        <ViewModel:MainStats/>
    </UserControl.DataContext>
    <Grid Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top">
